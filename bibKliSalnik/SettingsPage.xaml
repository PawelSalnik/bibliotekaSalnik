<Page
    x:Class="bibKliSalnik.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bibKliSalnik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <TextBlock Text="USTAWIENIA" FontSize="30" Margin="0,0,0,20"/>
            <TextBlock Text="Tryb jasny/ciemny" Margin="0,0,0,10"/>
            <RadioButton Content="Ciemny" GroupName="Theme" Checked="DarkTheme_Checked"/>
            <RadioButton Content="Jasny" GroupName="Theme" Checked="LightTheme_Checked"/>
            <RadioButton Content="Systemowy" GroupName="Theme" Checked="DefaultTheme_Checked"/>
        </StackPanel>
    </Grid>

</Page>
